<div class="container">
  <div class="text-center mt-5">
    <h1 style="font-family: 'Anton', sans-serif; font-size: 50px; color: #2a5279">Short links, big results</h1>
  </div>
  <div class="text-center mt-5">
    <i class=" fas fa-link" style="font-size: 180px; color: #e68114"></i>
  </div>
  <form action="/" method="POST">
    <div class="d-grid col-8 mx-auto mt-5 mb-3">
      <input type="url" class="form-control" name="originalUrl" placeholder="Enter the link here"
        oninvalid="setCustomValidity('Please enter valid URL!')" oninput="setCustomValidity('')" required>
    </div>
    <div class="d-grid col-3 mx-auto">
      <button type="submit" class="btn"
        style="font-family: 'Fjalla One', sans-serif; background-color: #2a5279; color: #ffffff">Shorten</button>
    </div>
  </form>
</div>