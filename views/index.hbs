<div class="container">
  <div class="text-center mt-5">
    <h1 style="font-family: 'Anton', sans-serif; font-size: 50px; color: #1d575c">Short links, big results</h1>
  </div>
  <div class="text-center mt-5">
    <i class=" fas fa-link" style="font-size: 180px; color: #2797a0"></i>
  </div>
  <form action="/" method="POST">
    <div class=" mt-5 mb-3">
      <input type="url" class="form-control" name="url" style="font-family:'Fjalla One', sans-serif"
        placeholder="Input url and shorten it!" oninvalid="setCustomValidity('Please enter valid URL!')"
        oninput="setCustomValidity('')" required>
    </div>
    <div class="d-grid col-6 mx-auto">
      <button type="submit" class="btn btn-secondary" style="font-family: 'Fjalla One', sans-serif">Shorten</button>
    </div>
  </form>
</div>